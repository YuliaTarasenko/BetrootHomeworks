@using TestApplication.Logic;
@inject MyContext Ctx

@{
    ViewData["Title"] = "Users List";
    var bottom20Users = Ctx.Users.OrderByDescending(u=>u.Id).Take(20).ToList();
}

<h1 id="usersTableHead">Users List</h1>

<table id="usersTable" class="table table-success table-striped-columns">
    <thead>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Age</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>City</th>
        <th>Edit</th>
    </thead>
    <tbody>
        @foreach(var user in bottom20Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.City</td>
                <td><a asp-action="EditUser" asp-route-id="@user.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
