@model TestApplication.Models.User

@{
    ViewData["Title"] = "Edit User";
}


<div class="col-md-6 card p-3 mx-auto">
    <h2>Edit User</h2>
    <form asp-action="EditUser" method="post">
        @Html.HiddenFor(user=>user.Id)
        <div class="row">
            <div class="col">
                <label asp-for="FirstName" class="control-label">First Name</label>
                <input asp-for="FirstName" type="text" class="form-control" aria-label="First Name">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <input asp-for="LastName" type="text" class="form-control" aria-label="Last Name">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="control-label">Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" type="text" class="form-control" placeholder="name@example.com" aria-label="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="+38093-044-44-44" aria-label="Phone Number">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <div>
            <label asp-for="City" class="control-label">City</label>
            <select asp-for="City" class="form-select form-control" aria-label="Default select example">
                <option selected>Open this select menu</option>
                <option value="Kyiv">Kyiv</option>
                <option value="Odesa">Odesa</option>
                <option value="Lviv">Lviv</option>
            </select>
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <button type="submit" value="Edit User" class="btn btn-primary mt-5">Edit</button>
    </form>
</div>
