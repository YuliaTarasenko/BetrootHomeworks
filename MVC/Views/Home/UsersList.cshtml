@inject MyContext Ctx

@{
    ViewData["Title"] = "Users List";
    var bottom20Users = Ctx.Users.OrderByDescending(u => u.Id).Take(20).ToList();
}
<div class="row">
    <div class="col">
        <h1>Users List</h1>
    </div>
    <div class="col">
        <a asp-action="AddUser" class="btn btn-primary">Add new User</a>
    </div>
</div>


<table class="table table-success table-striped-columns">
    <thead>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Age</th>
    <th>Email</th>
    <th>Phone Number</th>
    <th>City</th>
    </thead>
    <tbody>
        @foreach (var user in bottom20Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Age</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>@user.City</td>
            </tr>
        }
    </tbody>
</table>
